{
	"compilerOptions": {
		// ECMA版本
		"target": "esnext",
		// 解析非相对模块名的基准目录
		"baseUrl": ".",
		// 从 tslib 导入辅助工具函数
		"importHelpers": true,
		// 指定生成哪个模块系统代码
		"module": "esnext",
		// 严格检查
		"strict": true,
		// jsx支持
		"jsx": "preserve",
		// 生成map文件
		"sourceMap": true,
		// 解析json文件
		"resolveJsonModule": true,
		// ES模块的互操作
		"esModuleInterop": true,
		// 决定如何处理模块。
		"moduleResolution": "node",
		// 编译过程中需要引入的库文件
		"lib": ["esnext", "dom"],
		"skipLibCheck": true, // 针对element-puls的ts打包校验
		"types": ["element-plus/global"],
		"paths": {
			"@/*": ["src/*"] // 相对位置需要配置baseUrl才能识别，否则会报错
		},
		"useDefineForClassFields": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
